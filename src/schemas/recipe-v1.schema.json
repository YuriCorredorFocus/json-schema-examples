{
  "$id": "http://example.com/schemas/recipe",
  "$schema": "http://json-schema.org/draft-07/schema#",

  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100
    },
    "ingredients": {
      "type": "string",
      "minLength": 1,
      "maxLength": 1000
    },
    "time": {
      "type": "number",
      "minimum": 1
    }
  },
  "required": ["name", "ingredients"]
}